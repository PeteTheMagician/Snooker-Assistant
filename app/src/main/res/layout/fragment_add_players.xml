<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="pl.dawidfiruzek.snookerassistant.AddPlayersFragment"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@color/darkgreen">

    <Button
        android:id="@+id/addPlayer_button_next"
        android:layout_width="@dimen/snooker_assistant_button_width"
        android:layout_height="@dimen/snooker_assistant_button_height"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text="@string/next"/>

    <Button
        android:id="@+id/addPlayer_button_add_players"
        android:layout_width="@dimen/snooker_assistant_button_width"
        android:layout_height="@dimen/snooker_assistant_button_height"
        android:layout_above="@+id/addPlayer_button_next"
        android:layout_centerHorizontal="true"
        android:text="@string/add_player"/>

    <ListView
        android:id="@+id/addPlayer_list"
        android:layout_width="@dimen/snooker_assistant_button_width"
        android:layout_height="match_parent"
        android:layout_above="@+id/addPlayer_button_add_players"
        android:layout_centerHorizontal="true"
        android:choiceMode="singleChoice"
        android:divider="@android:color/transparent"
        android:dividerHeight="0dp"
        android:background="@android:color/transparent" />

</RelativeLayout>
